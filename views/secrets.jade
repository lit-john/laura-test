extends layout

block content
  h2 Welcome back #{username}
  p You have successfully logged in :)
  h3 Your Secrets.....

  - var values = secrets;
  ul
    each val in values.length ? values : ['You have no secrets']
      li #{val.secretTitle}
        ul
          li #{val.secret}

h3 Add a New Secret.....
  form(method="POST" action="/users/mySecrets")
    label(for="secretTitle") Secret Title:
    input(type="text" name="secretTitle")
    br
    label(for="secret") Secret:
    input(type="text" name="secret")
    br
    input(type="submit" name="submit" value="Keep my Secret")
